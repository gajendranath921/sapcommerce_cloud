<action-definition xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   id="com.hybris.backoffice.widgets.actions.excel.export"
				   xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/action-definition.xsd">
	<name>Excel Export Action</name>
	<description>Action providing exporting data to Excel file</description>
	<author>hybris</author>
	<version>1.0</version>
	<sockets>
		<output id="itemsToExport" type="com.hybris.cockpitng.search.data.pageable.Pageable"/>
	</sockets>

	<iconUri>excelexport</iconUri>

	<actionClassName>com.hybris.backoffice.widgets.actions.excel.ExcelExportAction</actionClassName>

	<settings>
		<setting key="confirmation.threshold" default-value="500" type="java.lang.Integer"/>
	</settings>

</action-definition>
